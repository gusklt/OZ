
  <% if @performance.photo.attached? %>
    <%= cl_image_tag @performance.photo.key, height: 300, width: 1500, crop: :fill, class: 'perf-banner' %>
  <% else %>
    <img src="https://res.cloudinary.com/dmp0gq5lk/image/upload/v1629214993/matt-flores-NpgN1gXdlSw-unsplash_tqyr0l.jpg" alt="performance banner" class='perf-banner'>
  <% end %>

<div class="container-show mt-3">
<div class="presentation">
    <h2><%= @performance.title %></h2>

    <p><i class="fas fa-map-marker"></i> <%= @performance.location %></p>

    <p><%= @performance.description %></p>

    <h3>The magician</h3>
    <%= image_tag "https://avatars.githubusercontent.com/u/84907809?v=4", class: "avatar-bordered" %>
    <%= @performance.user.username.capitalize %>

    <% if policy(@performance).destroy? %>
      <%= link_to "Delete", @performance, method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
  <div class="booking-form">
    <div class="price">
      <strong>Price</strong>
      <p><%= @performance.price %> â‚¬</p>
    </div>
    <hr>
    <% if policy(Booking).create? %>
      <%= render 'bookings/form', performance: @performance, booking: @booking %>
    <% end %>
  </div>
</div>

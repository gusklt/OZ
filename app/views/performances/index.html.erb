<div class="index_container">
  <div class="cards">
    <% @performances.each do |performance| %>
    <div class="card-product">
      <% if performance.photo.attached? %>
        <%= cl_image_tag performance.photo.key %>
      <% else %>
          <img src="https://res.cloudinary.com/dmp0gq5lk/image/upload/v1629214993/matt-flores-NpgN1gXdlSw-unsplash_tqyr0l.jpg" alt="" >
      <% end %>
      <div class="card-product-info">
        <h5 class="card-title"><%= performance.title %></h5>
        <p class="card-text"><%= performance.description %></p>
        <%= performance.location %>
        <%= performance.price %>
        <%= performance.average_rating %>
      </div>
    </div>
    <% end %>
  </div>
  <div id="map"
    style="width: 30vw; height: 100vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>

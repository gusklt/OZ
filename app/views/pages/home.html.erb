<div class="banner">
  <div class="container">
    <h1 id="main-title"></h1>
    <p id="baseline"></p>
  </div>
</div>

<div class="container">
  <!-- Text presentation -->
  <div class="text-presentation text-center">
    <p> <i class="fas fa-hat-wizard"></i><br>
    Want to see magic? We are here for you. <br>
    Book your own magic show in a few minutes!</p>
  </div>

  <!-- performances -->
  <div class="cards_container">
    <% @performances.each do |performance| %>
        <div class="card magic">
          <%= link_to performance do %>
            <% if performance.photo.attached? %>
              <%= cl_image_tag performance.photo.key, height: 165, width: 267, crop: :fit %>
            <% else %>
              <img src="https://res.cloudinary.com/dmp0gq5lk/image/upload/v1629214993/matt-flores-NpgN1gXdlSw-unsplash_tqyr0l.jpg" alt="" height=165>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= performance.title %></h5>
              <p class="card-text"><%= performance.description %></p>
              <p class="card.location"><%= icon('fas', 'map-marker')%> <%= performance.location %></p>
              <p class="card.price"><%= performance.price %>â‚¬</p>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>

  <div class="purple-button center-button">
    <%= link_to 'Browse performances', performances_path %>
  </div>

  <!-- magicians presentations-->
  <div class="magicians">
    <h3 class="text-center">Our best magician</h3>
    <div class="cards_container">
      <div class="magician-card">
        <%= image_tag "https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/v1607630183/iqsisg4v7frikbvxikcv.jpg", class: "avatar-bordered" %>
        <div class="card-product-info">
          <%= @users[0].username.capitalize %>
        </div>
      </div>
      <div class="magician-card">
        <%= image_tag "https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/v1563188935/aecpacu35pytf2niyqea.jpg", class: "avatar-bordered" %>
        <div class="card-product-info">
          <%= @users[1].username.capitalize %>
        </div>
      </div>
      <div class="magician-card">
        <%= image_tag "https://avatars.githubusercontent.com/u/71978544?v=4", class: "avatar-bordered" %>
        <div class="card-product-info">
          <%= @users[2].username.capitalize %>
        </div>
      </div>
      <div class="magician-card">
        <%= image_tag "https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/v1611653847/y5go6enykr9xmood7w9a.jpg", class: "avatar-bordered" %>
        <div class="card-product-info">
          <%= @users[3].username.capitalize %>
        </div>
      </div>
    </div>
  </div>
</div>


